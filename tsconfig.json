{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "*": ["*"]
        },
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": "./src",
        "outDir": "./build",
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
